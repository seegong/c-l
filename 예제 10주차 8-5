#include <stdio.h>

int main(void)

{
    char chs1[6] = {'a','p','p','l','e', '\0'};
    char chs2[6] = "apple";
    char chs3[5] = "apple";
    
    printf(" apple 을 표현 하는 프로그램\n");
    printf("=====================================\n");
    printf("1, 배열의 요소를 중괄호로 하나씩 나열 [ %s ]  \n",chs1);
    printf("2 배열의 요소를 한꺼번에 나열.      [ %s ]  \n",chs2);
    printf("3 배열의 크기를 5로 설정          [ %s ]  \n",chs3);
    printf("=====================================\n");
    
}
