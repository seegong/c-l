#include <stdio.h>

int main(void)

{
    int arr [5] = {35,27,16,98,52};
    int cnt, hap=0;
    
    
    printf(" 배열을 선언하여 for 문으로 합을 구하는 프로그램 \n");
    printf("======================================\n");
    
    for(cnt= 0; cnt < 5; cnt++)
        hap += arr[cnt];
    printf(" arr[5]  = {35 27 16 98 52} 으로 배열을 선언 \n");
    printf("===================================\n");
    printf("  누적합 [%d]\n",hap);
    printf(" 프로그램을 종료합니다.\n");
    printf("===================================\n");
    
}

